<h1>Список сайтов</h1>
<%= link_to 'Добавить сайт', new_shop_path %>
<table>
  <tr>
    <th>Название</th>
    <th>Url</th>
    <th>Xpath</th>
    <th>Host</th>
  </tr>

  <% @shop.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.url %></td>
        <td><%= shop.xpath %></td>
        <td><%= shop.host %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop_path(shop),
                        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>